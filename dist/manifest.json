{
  "manifest_version": 2,

  "name": "autofill",
  "description": "An autofill extension for job and internship applications.",
  "version": "0.0.1",

  "content_scripts": [{ "js": [ "content.js"],
    "matches": [ "<all_urls>"]
    }],

  "background": { 
    "scripts": ["background.js"] 
  },

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },

  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },

  "permissions": [
    "tabs"
  ]
}